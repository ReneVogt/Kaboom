<UserControl x:Class="Com.Revo.Games.Kaboom.Views.KaboomCellControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:DesignData="clr-namespace:Com.Revo.Games.Kaboom.DesignerSampleData"
             xmlns:Converters="clr-namespace:Com.Revo.Games.Kaboom.Converters"
             mc:Ignorable="d" 
             d:DataContext="{x:Static DesignData:SampleData.CellOne}">
    <Grid Width="20" Height="20" Background="Gray">
        <Border BorderBrush="Black" BorderThickness="1">
        <Image Width="16" Height="16" HorizontalAlignment="Center" VerticalAlignment="Center"
               Source="{Binding State, Mode=OneWay, Converter={Converters:CellStateToIconSourceConverter}}"
               Stretch="Fill"
               />
        </Border>
    </Grid>
</UserControl>
